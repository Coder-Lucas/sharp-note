{
    "$schema": "https://www.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "allowImportingTsExtensions": true,
        "allowJs": true,
        "baseUrl": "src",
        "checkJs": true,
        "esModuleInterop": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "lib": ["DOM", "ES2015"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "outDir": "dist",
        "paths": {
            "#/*": ["components/*"],
            "@/*": ["app/*"],
            "@hooks/*": ["hooks/*"],
            "@lib/*": ["lib/*"],
            "@styles/*": ["styles/*"],
            "~/*": ["./*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "resolveJsonModule": true,
        "rootDir": ".",
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2015",
        "typeRoots": ["node_modules/@types"],
        "types": ["node", "react"]
    },
    "exclude": ["node_modules"],
    "include": [".next/dev/types/**/*.ts", ".next/types/**/*.ts", "app/**/*.ts", "app/**/*.tsx"]
}
